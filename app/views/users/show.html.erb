<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

  <div class="span8">
    <% if @user.pizzas.any? %>
      <h3>Microposts (<%= @user.pizzas.count %>)</h3>
      <ol class="pizzas">
        <%= render @pizzas %>
      </ol>
      <%= will_paginate @pizzas %>
    <% end %>
  </div>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
